{
    "liveServer.settings.useLocalIp": true,
    "liveSassCompile.settings.formats": [
        {
            "format": "compressed",
            "extensionName": ".min.css",
            "savePath": "/public/bundle"
        }
    ],
    "liveSassCompile.settings.generateMap": true,
    "liveSassCompile.settings.includeItems": [ "/public/assets/css/sass/core/core.scss" ],
    "liveSassCompile.settings.excludeList": [ "/public/assets/css/sass/**" ],
    "liveSassCompile.settings.autoprefix": [
        "> 0.01%",
        "last 4 versions"
    ]
}